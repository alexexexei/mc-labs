#define LATCH_PIN GPIO_PIN_10
#define LATCH_PORT GPIOA
#define CS_RESET 0
#define CS_SET 1

#define START_SYMBOL 'S'
#define END_SYMBOL 'E'
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
 SPI_HandleTypeDef hspi2;
DMA_HandleTypeDef hdma_spi2_tx;

TIM_HandleTypeDef htim1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
uint8_t uart_rx_data[10] = {'0'};
uint8_t num_data[8] = {0};
uint8_t spi_tx_data[2];
uint8_t dma_active = 0;
uint8_t current_digit = 0;
uint8_t segment_digits[] = {
	0b00111111, // 0
	0b00000110, // 1
	0b01011011, // 2
	0b01001111, // 3
	0b01100110, // 4
	0b01101101, // 5
	0b01111101, // 6
	0b00000111, // 7
	0b01111111, // 8
	0b01101111  // 9
};
/* USER CODE END PV */

